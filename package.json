{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "preclean": "pnpm dlx turbo daemon stop || true",
    "clean": "pnpm -r run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=@react-lab-mono/ui && changeset publish",
    "preview-storybook": "turbo run preview-storybook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "name": "design-system"
}
